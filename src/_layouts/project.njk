---
layout: base.njk
section: project
---

<style>
  :root {--color-projet: #{{ color }};}
</style>

<div class="page-container {{ section }}">
<div class="intro">
  <h1>{{title}}</h1>
  <h2>brief</h2>
  <p>{{ brief }}</p>
  <h2>réponse</h2>
  <p>{{ reponse }}</p>

{% if tags %}
      <div class="tag-list">
      {% for tag in tags %}
        {%- if tag != "post" -%}
          {% set tagUrl %}/project-tags/{{ tag }}/{% endset %}
          <a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
      </div>
{% endif %}
</div>

  {{ layoutContent | safe | replace("<table>", "<figure>") | replace("</table>", "</figure>")
                       | replace("<em>", "<figcaption>") | replace("</em>", "</figcaption>") }}
  <nav>
    <a href="{{ '/projects/' | url }}">← View All Projects</a>
  </nav>
</div>